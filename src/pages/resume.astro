    <!-- Education + Certs -->
    <div class="grid gap-6 md:grid-cols-2" data-reveal-stagger>
      <div class="card space-y-4">
        <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-accent">Education</h2>
        <div class="space-y-3">
          <div>
            <p class="font-medium text-textMain">Juris Doctor / Graduate Diploma in Civil Law</p>
            <p class="text-sm text-textMuted">Louisiana State University, Paul M. Hebert Law Center</p>
          </div>
          <div>
            <p class="font-medium text-textMain">Bachelor of Arts in Government, Minor in Biology</p>
            <p class="text-sm text-textMuted">University of Texas at Austin</p>
          </div>
        </div>
      </div>
      <div class="card space-y-4">
        <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-accent">Certifications &amp; Affiliations</h2>
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-accent/60"></span>
            <p class="text-textMuted">CompTIA Security+ CE</p>
          </div>
          <div class="flex items-center gap-2">
