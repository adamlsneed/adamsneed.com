---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout
  title="Tetris"
  description="A classic Tetris game built with vanilla JavaScript and Canvas."
>
  <section class="space-y-8">
    <div class="max-w-4xl space-y-4">
      <p class="eyebrow">Game</p>
      <h1 class="section-title">Tetris</h1>
      <p class="lead">
        Classic block-stacking. Arrow keys to move and rotate, down to soft drop, space to hard drop.
      </p>
    </div>

    <div class="grid gap-6 lg:grid-cols-[1fr,280px]">
      <div class="card flex items-center justify-center p-4">
        <canvas id="tetris-canvas" width="300" height="600" class="rounded-lg" style="background: #0a0f1a; border: 2px solid #2b3850;"></canvas>
      </div>

      <aside class="card space-y-6">
        <div>
          <h2 class="text-xl font-semibold text-textMain">Next</h2>
          <canvas id="next-canvas" width="120" height="120" class="mt-2 rounded-lg" style="background: #0a0f1a; border: 1px solid #2b3850;"></canvas>
        </div>

        <div>
          <p class="metric-label">Score</p>
          <p id="score-display" class="text-3xl font-semibold text-textMain">0</p>
        </div>

        <div>
          <p class="metric-label">Lines</p>
          <p id="lines-display" class="text-xl font-semibold text-textMain">0</p>
        </div>

        <div>
          <p class="metric-label">Level</p>
          <p id="level-display" class="text-xl font-semibold text-textMain">1</p>
        </div>

        <div class="flex gap-3">
          <button id="start-btn" class="btn-primary" type="button">Start</button>
          <button id="pause-btn" class="btn-secondary" type="button">Pause</button>
        </div>

        <div class="text-sm text-textMuted space-y-1">
          <p><kbd class="rounded border border-borderTone bg-panel px-1.5 py-0.5 text-xs">←</kbd> <kbd class="rounded border border-borderTone bg-panel px-1.5 py-0.5 text-xs">→</kbd> Move</p>
          <p><kbd class="rounded border border-borderTone bg-panel px-1.5 py-0.5 text-xs">↑</kbd> Rotate</p>
          <p><kbd class="rounded border border-borderTone bg-panel px-1.5 py-0.5 text-xs">↓</kbd> Soft drop</p>
          <p><kbd class="rounded border border-borderTone bg-panel px-1.5 py-0.5 text-xs">Space</kbd> Hard drop</p>
        </div>
      </aside>
    </div>
  </section>

  <script type="module">
    const canvas = document.getElementById('tetris-canvas');
    const ctx = canvas.getContext('2d');
    const nextCanvas = document.getElementById('next-canvas');
    const nextCtx = nextCanvas.getContext('2d');
    const scoreDisplay = document.getElementById('score-display');
    const linesDisplay = document.getElementById('lines-display');
    const levelDisplay = document.getElementById('level-display');
    const startBtn = document.getElementById('start-btn');
    const pauseBtn = document.getElementById('pause-btn');

    const COLS = 10;
    const ROWS = 20;
    const BLOCK = 30;
    const NEXT_BLOCK = 24;

    const COLORS = {
      I: '#14b8a6',
      O: '#f59e0b',
      T: '#8b5cf6',
      S: '#10b981',
      Z: '#ef4444',
      J: '#3b82f6',
      L: '#f97316'
    };

    const SHAPES = {
      I: [[1,1,1,1]],
      O: [[1,1],[1,1]],
      T: [[0,1,0],[1,1,1]],
      S: [[0,1,1],[1,1,0]],
      Z: [[1,1,0],[0,1,1]],
      J: [[1,0,0],[1,1,1]],
      L: [[0,0,1],[1,1,1]]
    };

    const PIECE_NAMES = Object.keys(SHAPES);

    let board = [];
    let currentPiece = null;
    let nextPiece = null;
    let score = 0;
    let lines = 0;
    let level = 1;
    let gameOver = false;
    let paused = false;
    let started = false;
    let dropInterval = 1000;
    let lastDrop = 0;
    let animFrame = null;

    function createBoard() {
      board = Array.from({ length: ROWS }, () => Array(COLS).fill(0));
    }

    function randomPiece() {
      const name = PIECE_NAMES[Math.floor(Math.random() * PIECE_NAMES.length)];
      const shape = SHAPES[name].map(row => [...row]);
      return {
        name,
        shape,
        color: COLORS[name],
        x: Math.floor((COLS - shape[0].length) / 2),
        y: 0
      };
    }

    function rotate(shape) {
      const rows = shape.length;
      const cols = shape[0].length;
      const rotated = Array.from({ length: cols }, () => Array(rows).fill(0));
      for (let r = 0; r < rows; r++) {
        for (let c = 0; c < cols; c++) {
          rotated[c][rows - 1 - r] = shape[r][c];
        }
      }
      return rotated;
    }

    function collides(piece, dx = 0, dy = 0, shape = null) {
      const s = shape || piece.shape;
      for (let r = 0; r < s.length; r++) {
        for (let c = 0; c < s[r].length; c++) {
          if (!s[r][c]) continue;
          const nx = piece.x + c + dx;
          const ny = piece.y + r + dy;
          if (nx < 0 || nx >= COLS || ny >= ROWS) return true;
          if (ny >= 0 && board[ny][nx]) return true;
        }
      }
      return false;
    }

    function lock() {
      for (let r = 0; r < currentPiece.shape.length; r++) {
        for (let c = 0; c < currentPiece.shape[r].length; c++) {
          if (!currentPiece.shape[r][c]) continue;
          const y = currentPiece.y + r;
          const x = currentPiece.x + c;
          if (y < 0) { gameOver = true; return; }
          board[y][x] = currentPiece.color;
        }
      }
      clearLines();
      currentPiece = nextPiece;
      nextPiece = randomPiece();
      if (collides(currentPiece)) gameOver = true;
    }

    function clearLines() {
      let cleared = 0;
      for (let r = ROWS - 1; r >= 0; r--) {
        if (board[r].every(cell => cell !== 0)) {
          board.splice(r, 1);
          board.unshift(Array(COLS).fill(0));
          cleared++;
          r++;
        }
      }
      if (cleared > 0) {
        const points = [0, 100, 300, 500, 800];
        score += (points[cleared] || 800) * level;
        lines += cleared;
        level = Math.floor(lines / 10) + 1;
        dropInterval = Math.max(100, 1000 - (level - 1) * 80);
      }
    }

    function drawBlock(ctx, x, y, color, size) {
      ctx.fillStyle = color;
      ctx.fillRect(x * size + 1, y * size + 1, size - 2, size - 2);
      ctx.fillStyle = 'rgba(255,255,255,0.12)';
      ctx.fillRect(x * size + 1, y * size + 1, size - 2, 3);
      ctx.fillRect(x * size + 1, y * size + 1, 3, size - 2);
    }

    function drawBoard() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Grid
      ctx.strokeStyle = '#1a2236';
      ctx.lineWidth = 0.5;
      for (let r = 0; r <= ROWS; r++) {
        ctx.beginPath(); ctx.moveTo(0, r * BLOCK); ctx.lineTo(COLS * BLOCK, r * BLOCK); ctx.stroke();
      }
      for (let c = 0; c <= COLS; c++) {
        ctx.beginPath(); ctx.moveTo(c * BLOCK, 0); ctx.lineTo(c * BLOCK, ROWS * BLOCK); ctx.stroke();
      }

      // Locked pieces
      for (let r = 0; r < ROWS; r++) {
        for (let c = 0; c < COLS; c++) {
          if (board[r][c]) drawBlock(ctx, c, r, board[r][c], BLOCK);
        }
      }

      // Ghost piece
      if (currentPiece && !gameOver) {
        let ghostY = 0;
        while (!collides(currentPiece, 0, ghostY + 1)) ghostY++;
        ctx.globalAlpha = 0.2;
        for (let r = 0; r < currentPiece.shape.length; r++) {
          for (let c = 0; c < currentPiece.shape[r].length; c++) {
            if (currentPiece.shape[r][c]) {
              drawBlock(ctx, currentPiece.x + c, currentPiece.y + r + ghostY, currentPiece.color, BLOCK);
            }
          }
        }
        ctx.globalAlpha = 1;

        // Current piece
        for (let r = 0; r < currentPiece.shape.length; r++) {
          for (let c = 0; c < currentPiece.shape[r].length; c++) {
            if (currentPiece.shape[r][c]) {
              drawBlock(ctx, currentPiece.x + c, currentPiece.y + r, currentPiece.color, BLOCK);
            }
          }
        }
      }

      // Game over overlay
      if (gameOver) {
        ctx.fillStyle = 'rgba(9,13,20,0.85)';
        ctx.fillRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = '#e7edf8';
        ctx.font = 'bold 28px Inter, sans-serif';
        ctx.textAlign = 'center';
        ctx.fillText('GAME OVER', canvas.width / 2, canvas.height / 2 - 10);
        ctx.font = '16px Inter, sans-serif';
        ctx.fillStyle = '#9aa8bf';
        ctx.fillText(`Score: ${score}`, canvas.width / 2, canvas.height / 2 + 20);
        ctx.fillText('Press Start to play again', canvas.width / 2, canvas.height / 2 + 45);
      }
    }

    function drawNext() {
      nextCtx.clearRect(0, 0, nextCanvas.width, nextCanvas.height);
      if (!nextPiece) return;
      const s = nextPiece.shape;
      const offsetX = Math.floor((5 - s[0].length) / 2);
      const offsetY = Math.floor((5 - s.length) / 2);
      for (let r = 0; r < s.length; r++) {
        for (let c = 0; c < s[r].length; c++) {
          if (s[r][c]) drawBlock(nextCtx, offsetX + c, offsetY + r, nextPiece.color, NEXT_BLOCK);
        }
      }
    }

    function updateUI() {
      scoreDisplay.textContent = score.toLocaleString();
      linesDisplay.textContent = lines;
      levelDisplay.textContent = level;
    }

    function gameLoop(time) {
      if (gameOver || paused) {
        drawBoard();
        drawNext();
        updateUI();
        if (!gameOver) animFrame = requestAnimationFrame(gameLoop);
        return;
      }

      if (time - lastDrop > dropInterval) {
        if (!collides(currentPiece, 0, 1)) {
          currentPiece.y++;
        } else {
          lock();
        }
        lastDrop = time;
      }

      drawBoard();
      drawNext();
      updateUI();
      animFrame = requestAnimationFrame(gameLoop);
    }

    function startGame() {
      createBoard();
      score = 0; lines = 0; level = 1;
      dropInterval = 1000;
      gameOver = false; paused = false; started = true;
      currentPiece = randomPiece();
      nextPiece = randomPiece();
      lastDrop = performance.now();
      if (animFrame) cancelAnimationFrame(animFrame);
      animFrame = requestAnimationFrame(gameLoop);
      startBtn.textContent = 'Restart';
    }

    startBtn.addEventListener('click', startGame);
    pauseBtn.addEventListener('click', () => {
      if (!started || gameOver) return;
      paused = !paused;
      pauseBtn.textContent = paused ? 'Resume' : 'Pause';
      if (!paused) {
        lastDrop = performance.now();
        animFrame = requestAnimationFrame(gameLoop);
      }
    });

    document.addEventListener('keydown', (e) => {
      if (!started || gameOver || paused) return;
      switch (e.key) {
        case 'ArrowLeft':
          if (!collides(currentPiece, -1, 0)) currentPiece.x--;
          e.preventDefault();
          break;
        case 'ArrowRight':
          if (!collides(currentPiece, 1, 0)) currentPiece.x++;
          e.preventDefault();
          break;
        case 'ArrowDown':
          if (!collides(currentPiece, 0, 1)) { currentPiece.y++; score += 1; }
          e.preventDefault();
          break;
        case 'ArrowUp':
          const rotated = rotate(currentPiece.shape);
          if (!collides(currentPiece, 0, 0, rotated)) currentPiece.shape = rotated;
          e.preventDefault();
          break;
        case ' ':
          while (!collides(currentPiece, 0, 1)) { currentPiece.y++; score += 2; }
          lock();
          lastDrop = performance.now();
          e.preventDefault();
          break;
      }
    });

    // Draw empty state
    createBoard();
    drawBoard();
    ctx.fillStyle = '#9aa8bf';
    ctx.font = '18px Inter, sans-serif';
    ctx.textAlign = 'center';
    ctx.fillText('Press Start to play', canvas.width / 2, canvas.height / 2);
  </script>
</MainLayout>
